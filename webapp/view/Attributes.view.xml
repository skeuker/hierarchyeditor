<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core" xmlns:m="sap.m" xmlns="sap.f" controllerName="pnp.hierarchyeditor.controller.Attributes"
	busy="{AttributesViewModel>/isViewBusy}" busyIndicatorDelay="0">
	<DynamicPage id="pageHierarchy" showFooter="true">
		<title>
			<DynamicPageTitle>
				<heading width="100%">
					<m:Title text="{AttributesViewModel>/viewTitle}"/>
				</heading>
			</DynamicPageTitle>
		</title>
		<header>
			<DynamicPageHeader>
				<content/>
			</DynamicPageHeader>
		</header>
		<content>
			<m:VBox class="sapUiSmallMargin">
				<f:Form id="FormServiceHierarchyMember" editable="true" ariaLabelledBy="Title1">
					<f:toolbar>
						<m:Toolbar>
							<m:ToolbarSpacer/>
							<m:Button icon="sap-icon://drop-down-list"/>
						</m:Toolbar>
					</f:toolbar>
					<f:layout>
						<f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="4"
							emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1" singleContainerFullSize="false"/>
					</f:layout>
					<f:formContainers>
						<f:FormContainer>
							<f:formElements>
								<f:FormElement>
									<f:fields>
										<m:Input value="{SolutionAreaText}" width="100%" id="__input0"/>
									</f:fields>
									<f:label>
										<m:Label text="Solution Area Text"/>
									</f:label>
								</f:FormElement>
								<f:FormElement>
									<f:fields>
										<m:Input xmlns:m="sap.m" value="{= ${SolutionAreaArchitectID/toSolutionAreaArchitect/FirstName} + ' ' + ${SolutionAreaArchitectID/toSolutionAreaArchitect/LastName} }" width="100%"/>
									</f:fields>
									<f:label>
										<m:Label xmlns:m="sap.m" text="Solution Area Architect"/>
									</f:label>
								</f:FormElement>
							</f:formElements>
						</f:FormContainer>
					</f:formContainers>
				</f:Form>
			</m:VBox>
		</content>
		<footer>
			<m:Toolbar>
				<m:Button id="messagePopoverBtn" icon="sap-icon://message-popup" type="Emphasized" press="onMessagesButtonPress"
					text="{=${MessageModel>/}.length}" visible="{= ${MessageModel>/}.length &gt; 0 &amp;&amp; ${AttributesViewModel>/isLeadingView} }"/>
				<m:ToolbarSpacer/>
				<m:content>
					<m:Button type="Emphasized" press="onMessagesButtonPress" text="Save"/>
				</m:content>
			</m:Toolbar>
		</footer>
	</DynamicPage>
</mvc:View>