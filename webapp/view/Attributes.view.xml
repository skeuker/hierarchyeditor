<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core" xmlns:m="sap.m" xmlns="sap.f" controllerName="pnp.hierarchyeditor.controller.Attributes"
	busy="{AttributesViewModel>/isViewBusy}" busyIndicatorDelay="0">
	<DynamicPage id="pageHierarchy" showFooter="true">
		<title>
			<DynamicPageTitle>
				<heading width="100%">
					<m:Title text="{AttributesViewModel>/viewTitle}"/>
				</heading>
			</DynamicPageTitle>
		</title>
		<header>
			<DynamicPageHeader>
				<content/>
			</DynamicPageHeader>
		</header>
		<content>
			<m:FlexBox direction="Column" fitContainer="true" justifyContent="SpaceBetween">
				<m:items>
					<f:Form id="formServiceHierarchyItem" editable="true">
						<f:layout>
							<f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="4"
								emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1" singleContainerFullSize="false"/>
						</f:layout>
						<f:formContainers>
							<f:FormContainer>
								<f:formElements>
									<f:FormElement>
										<f:label>
											<m:Label text="Solution Area Text"/>
										</f:label>
										<f:fields>
											<m:Input value="{ServiceModel>SolutionAreaText}" width="100%" liveChange="onInputChange"/>
										</f:fields>
									</f:FormElement>
									<f:FormElement>
										<f:label>
											<m:Label xmlns:m="sap.m" text="Solution Area Architect"/>
										</f:label>
										<f:fields>
											<m:ComboBox items="{ path: 'ServiceModel>/People', sorter: { path: 'FirstName' } }" selectedKey="{ServiceModel>SolutionAreaArchitectID}"
												change="onInputChange">
												<core:Item key="{ServiceModel>PersonID}" text="{= ${ServiceModel>FirstName} + ' ' + ${ServiceModel>LastName} }"/>
											</m:ComboBox>
										</f:fields>
									</f:FormElement>
								</f:formElements>
							</f:FormContainer>
						</f:formContainers>
					</f:Form>
					<m:MessageStrip id="msMessageStrip" showCloseButton="true" showIcon="true" text="" class="sapUiSmallMarginBottom sapUiSmallMarginTop"/>
				</m:items>
			</m:FlexBox>
		</content>
		<footer>
			<m:Toolbar>
				<m:Button id="messagePopoverBtn" icon="sap-icon://message-popup" type="Emphasized" press="onMessagesButtonPress"
					text="{=${MessageModel>/}.length}" visible="{= ${MessageModel>/}.length &gt; 0 &amp;&amp; ${AttributesViewModel>/isLeadingView} }"/>
				<m:ToolbarSpacer/>
				<m:content>
					<m:Button type="Emphasized" press="oPressSaveAttributesButton" text="Save" enabled="{AttributesViewModel>/isSaveEnabled}"/>
				</m:content>
			</m:Toolbar>
		</footer>
	</DynamicPage>
</mvc:View>