<mvc:View controllerName="pnp.hierarchyeditor.controller.Attributes" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:m="sap.m" xmlns="sap.f"
	busy="{AttributesViewModel>/isViewBusy}" busyIndicatorDelay="0">
	<DynamicPage id="pageHierarchy" showFooter="true">
		<title>
			<DynamicPageTitle>
				<heading width="100%">
					<m:Title text="{AttributesViewModel>/viewTitle}"/>
				</heading>
			</DynamicPageTitle>
		</title>
		<header>
			<DynamicPageHeader>
				<content></content>
			</DynamicPageHeader>
		</header>
		<content>
			<m:VBox class="sapUiSmallMargin">
				<f:Form id="FormToolbar" editable="true" ariaLabelledBy="Title1">
					<f:toolbar>
						<m:Toolbar id="TB1">
							<m:Title id="Title1" text="Address" level="H4" titleStyle="H4"/>
							<m:ToolbarSpacer/>
							<m:Button icon="sap-icon://settings"/>
							<m:Button icon="sap-icon://drop-down-list"/>
						</m:Toolbar>
					</f:toolbar>
					<f:layout>
						<f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="4"
							emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1" singleContainerFullSize="false"/>
					</f:layout>
					<f:formContainers>
						<f:FormContainer ariaLabelledBy="Title2">
							<f:toolbar>
								<m:Toolbar>
									<m:Title id="Title2" text="Office" level="H5" titleStyle="H5"/>
									<m:ToolbarSpacer/>
									<m:Button icon="sap-icon://settings"/>
								</m:Toolbar>
							</f:toolbar>
							<f:formElements>
								<f:FormElement label="Name">
									<f:fields>
										<m:Input value="{SupplierName}" id="name"/>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="Street">
									<f:fields>
										<m:Input value="{Street}"/>
										<m:Input value="{HouseNumber}">
											<m:layoutData>
												<l:GridData span="XL2 L1 M3 S4"/>
											</m:layoutData>
										</m:Input>
									</f:fields>
								</f:FormElement>
							</f:formElements>
						</f:FormContainer>
					</f:formContainers>
				</f:Form>
			</m:VBox>
		</content>
		<footer>
			<m:Toolbar>
				<m:Button id="messagePopoverBtn" icon="sap-icon://message-popup" type="Emphasized" press="onMessagesButtonPress"
					text="{=${MessageModel>/}.length}" visible="{= ${MessageModel>/}.length > 0 &amp;&amp; ${AttributesViewModel>/isLeadingView} }"/>
				<m:ToolbarSpacer/>
			</m:Toolbar>
		</footer>
	</DynamicPage>
</mvc:View>