<mvc:View controllerName="pnp.hierarchyeditor.controller.Selector" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:semantic="sap.f.semantic">
	<semantic:SemanticPage id="SelectorPage" preserveHeaderStateOnScroll="true" toggleHeaderOnTitleClick="false" showFooter="true">
		<semantic:titleHeading>
			<Title id="selectorViewTitle" text="{SelectorViewModel>/ViewTitle}"/>
		</semantic:titleHeading>
		<semantic:content>
			<List id="SelectorList" width="auto" class="sapFDynamicPageAlignContent" busyIndicatorDelay="{SelectViewModel>/delay}"
				noDataText="{i18n>SelectorListNoDataText}" growing="true" mode="{= ${device>/system/phone} ? 'None' : 'SingleSelectMaster'}"
				growingScrollToLoad="true" updateFinished="onUpdateFinished" selectionChange="onSelectionChange">
				<headerToolbar>
					<OverflowToolbar>
						<SearchField id="searchField" showRefreshButton="true" tooltip="{i18n>SelectorSearchTooltip}" search="onSearch" width="auto">
							<layoutData>
								<OverflowToolbarLayoutData minWidth="150px" maxWidth="240px" shrinkable="true" priority="NeverOverflow"/>
							</layoutData>
						</SearchField>
						<ToolbarSpacer/>
						<Button id="sortButton" press="onOpenViewSettings" icon="sap-icon://sort" type="Transparent"/>
					</OverflowToolbar>
				</headerToolbar>
			</List>
		</semantic:content>
		<semantic:footerCustomActions>
				<Button id="butAddHierarchy" icon="sap-icon://add" type="Transparent" press="onHierarchyAddButtonPress"
					text="Add"/>
		</semantic:footerCustomActions>
	</semantic:SemanticPage>
</mvc:View>